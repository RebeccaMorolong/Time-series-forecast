# Environment configuration example
# Copy this file to .env and update with your values

# Data Generation
DATA_N_POINTS=2000
DATA_N_FEATURES=3
DATA_SEED=42

# Training
TRAINING_MODEL_TYPE=arima
TRAINING_EPOCHS=50
TRAINING_BATCH_SIZE=32

# API
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=False

# Database
DB_ENGINE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=timeseries_db
DB_USER=postgres
DB_PASSWORD=password

# Airflow
AIRFLOW_HOME=/home/user/airflow
AIRFLOW_EMAIL=airflow@example.com
AIRFLOW_EXECUTOR=LocalExecutor

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# Models
MODELS_DIR=models
DATA_DIR=data
RESULTS_DIR=results
